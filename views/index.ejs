<body class="container">
  <br>
  <h1 class="text-center">SuperBowl Bingo</h1>
  <br>
  <br>
  <br>
  <br>
  <br>
  <main class="form-signin w-100 m-auto">
    <form action="/auth" method="post">
      <h1 class="h3 mb-3 fw-normal text-white text-center">Sign up Or Log in</h1>
      <br>
      <div class="form-floating">
        <input type="text" class="form-control" id="username" name="username" required>
        <label for="floatingInput">Username/Name</label>
      </div>
      <br>
      <div class="form-floating">
        <input type="password" class="form-control" id="password" name="password" required>
        <label for="floatingPassword">4 Digit Pin Number</label>
      </div>
      <br>
      <button class="btn btn-primary w-100 py-2" type="submit">Submit</button>

      <br>
      <br>
