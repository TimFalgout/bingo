<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bingo - Play</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bubblegum+Sans&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>

<body class="bingo-page">
  <br>
  <div class="background-banner">
    <h1 class="ignore">
      <span class="chiefs-color">üèà Chiefs</span><span class="vs"> vs </span><span class="eagles-color">Eagles üèà</span>
    </h1>
  </div>
  <br>
  <h3 class="text-center">Welcome, <%= username %>!</h3>
  <div class="row g-4">
    <% allUsers.forEach(user=> { %>
      <div class="col-12 col-xxl-6">
        <h4>
          <%= user.username %>
        </h4>
        <div class="card">
          <div class="card-body p-2">
            <div class="bingo-container">
              <div class="bingo-grid" id="grid-<%= user.username %>" data-username="<%= user.username %>">
                <% userCards[user.username].forEach(item=> { %>
                  <button class="bingo-cell <%= item.checked ? 'checked' : '' %>" data-id="<%= item.id %>"
                    <%=user.username===username ? '' : 'disabled' %>>
                    <%= item.value %>
                  </button>
                  <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
  <br>
  <br>
  <br>
  <br>
  <!-- <div class="mt-4"> -->
  <!--   <form action="/logout" method="POST" class="d-inline-block"> -->
  <!--     <button class="btn btn-danger">Quit Game</button> -->
  <!--   </form> -->
  <!-- Button to trigger delete database modal -->
  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
    Admin
  </button>
  </div>
  <br>
  <br>
  <p class="mt-5 mb-3 text-white">¬© FalgouDev 2025</p>
  <br>
  <br>
  <!-- Bingo Modal -->
  <div class="modal fade" id="bingoModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">BINGO!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p id="bingoMessage"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Action</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Please enter the password to delete all tables.</p>
          <input type="password" id="deletePassword" class="form-control" placeholder="Enter password">
          <p id="error-message" class="text-danger mt-2" style="display: none;">Incorrect password, try again.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" id="confirmDelete" class="btn btn-danger">Confirm</button>
        </div>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const socket = io();
      const bingoModal = new bootstrap.Modal(document.getElementById('bingoModal'));
      const bingoMessage = document.getElementById('bingoMessage');

      // Handle cell clicks
      document.querySelectorAll('.bingo-cell').forEach(cell => {
        cell.addEventListener('click', function () {
          const cellId = this.dataset.id;
          socket.emit('cellClicked', {id: cellId, username: "<%= username %>"});
        });
      });

      // Listen for board updates
      socket.on('updateBoard', (data) => {
        const {username, bingoItems, hasBingo} = data;

        const grid = document.getElementById(`grid-${username}`);
        if (grid) {
          bingoItems.forEach((item) => {
            const cell = grid.querySelector(`[data-id="${item.id}"]`);
            if (cell) {
              cell.classList.toggle('checked', item.checked);
            }
          });

          if (hasBingo && grid.dataset.hasBingo !== 'true') {
            grid.dataset.hasBingo = 'true';
            bingoMessage.textContent = username === "<%= username %>"
              ? "Congratulations! You Have Bingo!"
              : `${username} Has Bingo!`;
            bingoModal.show();
          }
        }
      });

      // Handle delete button click
      document.getElementById('confirmDelete').addEventListener('click', async function () {
        const password = document.getElementById('deletePassword').value;
        const errorMessage = document.getElementById('error-message');

        try {
          const response = await fetch('/clear-database', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Accept': 'application/json'
            },
            body: JSON.stringify({password})
          });

          if (response.ok) {
            alert('Database cleared successfully!');
            window.location.reload();
          } else {
            errorMessage.style.display = 'block';
          }
        } catch (error) {
          console.error('Error clearing database:', error);
        }
      });
    });
  </script>
</body>

</html>
